<%- include('partials/header') %>

<div class="ui main text container">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form class="ui form  segment" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label for="blog[title]">Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>" id="">
		</div>
		<div class="field">
			<label for="blog[image]">Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>" id="">
		</div>
		<div class="field">
			<label for="blog[body]">Blog Content</label>
			<textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
		</div>
		<input class="ui inverted big green button" type="submit" value="Submit">
	</form>
</div>

<%- include('partials/footer') %>